{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% if collector.commandCount > 0 %}
        {% set profiler_markup_version = profiler_markup_version|default(1) %}

        {% set icon %}
            {% if profiler_markup_version == 1 %}
                <img width="20" height="28" alt="Mongo" src="data:image/png;base64,"/>
                <span class="sf-toolbar-status">{{ collector.commandCount }}</span>
            {% else %}
                {{ include('@DoctrineMongoDB/Collector/icon.svg') }}
                <span class="sf-toolbar-value">{{ collector.commandCount }}</span>
            {% endif %}
        {% endset %}
        {% set text %}
            <div class="sf-toolbar-info-piece">
                <b>Database Commands</b>
                <span class="sf-toolbar-status">{{ collector.commandCount }}</span>
            </div>
        {% endset %}
        {% include '@WebProfiler/Profiler/toolbar_item.html.twig' with { 'link': profiler_url } %}
    {% endif %}
{% endblock %}

{% block menu %}
<span class="label">
    <span class="icon"><img src="data:image/png;base64," alt="Mongo" /></span>
    <strong>Doctrine MongoDB</strong>
    <span class="count">
        <span>{{ collector.commandCount }}</span>
    </span>
</span>
{% endblock %}

{% block panel %}
    <h2>Command metrics</h2>
    <div class="metrics">
        <div class="metric">
            <span class="value">{{ collector.commandCount }}</span>
            <span class="label">Database Queries</span>
        </div>

        <div class="metric">
            <span class="value">{{ collector.time }} ms</span>
            <span class="label">Query time</span>
        </div>
    </div>

    <h2>Commands</h2>
    {% if collector.commands is empty %}
        <div class="empty">
            <em>No commands were performed.</em>
        </div>
    {% endif %}
    <table>
        <thead>
        <tr>
            <th class="nowrap">#</th>
            <th class="nowrap">Time</th>
            <th style="width: 100%;">Info</th>
        </tr>
        </thead>
        <tbody id="commands">
        {% for command in collector.commands %}
            <tr>
                <td class="nowrap">{{ loop.index }}</td>
                <td class="nowrap">{{ command.durationMicros }} ms</td>
                <td>
                    <code>{{ command.command }}</code>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
